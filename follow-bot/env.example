# Wallet Configuration (REQUIRED)
PRIVATE_KEY=0x...
WALLET_ADDRESS=eth|0x...

# Target Wallets (REQUIRED)
TARGET_WALLETS=eth|0x...,eth|0x...,client|...

# Copy Trading Settings
COPY_MODE=proportional
MAX_POSITION_SIZE=0.1
EXECUTION_DELAY=30
COOLDOWN_MINUTES=5
SLIPPAGE_TOLERANCE=0.05
ENABLE_AUTO_TRADING=false
MIN_TRADE_AMOUNT=10
MAX_DAILY_TRADES=50

# WebSocket Configuration
WEBSOCKET_RECONNECT_DELAY=5000
WEBSOCKET_MAX_RETRIES=10

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/var/log/follow-bot.log

# GalaChain API Configuration
GALACHAIN_RPC_URL=https://rpc.galachain.io
GALACHAIN_WEBSOCKET_URL=wss://explorer.galachain.io/ws

# Optional: CoinGecko API Key for price validation
CG_KEY=

# Development Settings
NODE_ENV=development
DEBUG=false
